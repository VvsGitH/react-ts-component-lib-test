{
  "name": "react-ts-component-lib",
  "version": "1.0.1",
  "description": "a react + typescript component library",
  "keywords": [
    "react",
    "typescript",
    "bootstrap@5",
    "bootstrap-italia@2"
  ],
  "source": "src/index.ts",
  "main": "dist/index.cjs.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "style": "dist/css/index.min.css",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "require": "./dist/index.cjs.js",
      "import": "./dist/index.esm.js",
      "types": "./dist/index.d.ts"
    },
    "./dist/css/index.min.css": {
      "import": "./dist/css/index.min.css",
      "require": "./dist/css/index.min.css"
    },
    "./package.json": "./package.json"
  },
  "sideEffects": [
    "*.css",
    "*.scss"
  ],
  "scripts": {
    "prebuild": "tsc && rimraf dist",
    "build": "rollup -c rollup.config.js",
    "prettier": "prettier --config .prettierrc --write \"**/*.{js,ts,tsx,css}\"",
    "lint": "eslint '**/*.{js,ts,tsx}'"
  },
  "author": "Vito Paparella Santorsola <vs.paparella@gmail.com>",
  "repository": {
    "url": "",
    "type": "git"
  },
  "license": "MIT",
  "engines": {
    "node": ">=18"
  },
  "devDependencies": {
    "@rollup/plugin-json": "^6.0.1",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^11.1.5",
    "@types/node": "^20.8.9",
    "@types/react": "^18.2.33",
    "@types/react-dom": "^18.2.14",
    "@typescript-eslint/eslint-plugin": "^6.9.1",
    "@typescript-eslint/parser": "^6.9.1",
    "bootstrap-italia": "2.3.5",
    "eslint": "^8.52.0",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "prettier": "^3.0.3",
    "prettier-plugin-sort-imports": "^1.7.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rimraf": "^5.0.5",
    "rollup": "^2.79.1",
    "rollup-plugin-copy": "^3.5.0",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "rollup-plugin-scss": "^3.0.0",
    "rollup-plugin-sourcemaps": "^0.6.3",
    "sass": "^1.69.5",
    "tslib": "^2.6.2",
    "typescript": "^5.2.2"
  },
  "peerDependencies": {
    "bootstrap-italia": ">=2.3.5",
    "react": ">=18.2.0",
    "react-dom": ">=18.2.0"
  }
}
